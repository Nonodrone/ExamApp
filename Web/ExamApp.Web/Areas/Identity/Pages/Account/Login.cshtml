@page
@model LoginModel

<div class="form-container">
    <h1>Login</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Username">Username</label>
            <input asp-for="Input.Username" type="text" name="username" placeholder="Username or Email..." />
        </div>
        <div class="form-group">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" type="password" name="password" placeholder="Password..." />
        </div>
        <div class="form-group">
            <button>Login</button>
        </div>
    </form>
</div>
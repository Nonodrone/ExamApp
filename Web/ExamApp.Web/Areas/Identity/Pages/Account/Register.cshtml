@page
@model RegisterModel

<div class="form-container">
    <h1>Register</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Username" class="register-form-label">Username</label>
            <input asp-for="Input.Username" type="text" name="username" placeholder="Username..." class="register-form-input" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Email" class="register-form-label">Email</label>
            <input asp-for="Input.Email" type="text" name="email" placeholder="Email..." class="register-form-input" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="register-form-label">Password</label>
            <input asp-for="Input.Password" type="password" name="password" placeholder="Password..." class="register-form-input" />
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="register-form-label">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" type="password" name="confirmPassword" placeholder="Confirm Password..." class="register-form-input" />
        </div>
        <div class="form-group">
            <button>Register</button>
        </div>
    </form>
</div>